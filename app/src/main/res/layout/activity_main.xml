<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AE9898"
    tools:context=".MainActivity">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/cake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:src="@drawable/cake"
        tools:ignore="ContentDescription"
       />
    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="325dp"
        android:layout_marginStart="135dp"
        android:src="@drawable/candle_0"
        android:onClick="candle1"
        android:id="@+id/candle1"/>

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="325dp"
        android:layout_marginStart="225dp"
        android:src="@drawable/candle_0"
        android:onClick="candle2"
        android:id="@+id/candle2"
        />

    <ImageView
        android:id="@+id/flame1"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/flame"
        android:visibility="invisible"
        android:onClick="flame1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/flame2"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="255dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/flame"
        android:visibility="invisible"
        android:onClick="flame2"
        tools:ignore="ContentDescription" />


    <Button
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:background="@drawable/click"
        android:text="Wish!"
        android:onClick="Wish"
        android:id="@+id/btn"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:id="@+id/balloon1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ballon1"
        android:layout_centerHorizontal="true"
        android:onClick="explode"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/balloon2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ballon1"
        android:layout_marginEnd="-25dp"
        android:layout_marginTop="50sp"
        android:layout_alignParentEnd="true"
        android:rotation="30"
        android:onClick="explode"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/balloon3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ballon1"
        android:layout_marginTop="50sp"
        android:layout_marginStart="-25dp"
        android:rotation="330"
        android:onClick="explode"
        tools:ignore="ContentDescription" />

</RelativeLayout>